<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500" prefWidth="950" spacing="12" styleClass="vbox" stylesheets="@../css/style.css, @../css/styleTabela.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.TelaPrincipal">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="8">
            <VBox.margin>
                <Insets left="10.0" top="10.0" />
            </VBox.margin>
        <Button mnemonicParsing="false" onAction="#abrirLogin" text="Logout">
         <VBox.margin>
            <Insets left="8.0" right="500.0" top="4.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
        <Label fx:id="mensagem" prefHeight="19.0" prefWidth="654.0" text="" />
      <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="19.0" prefWidth="187.0" text="Clique duas vezes para editar!">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets left="500.0" />
         </VBox.margin>
      </Label>
        </HBox>
        <TableView fx:id="tabela" editable="true" prefHeight="350" prefWidth="800">
            <columns>
                <TableColumn fx:id="colTitulo" editable="true" prefWidth="150" text="Título" />
                <TableColumn fx:id="colDescricao" editable="true" prefWidth="200" text="Descrição" />
                <TableColumn fx:id="colPaginas" editable="true" prefWidth="100" text="Páginas" />
                <TableColumn fx:id="colPaginaAtual" editable="true" prefWidth="100" text="Página Atual" />
                <TableColumn fx:id="colProgresso" editable="false" prefWidth="100" text="\% Lida" />
                <TableColumn fx:id="colStatus" editable="true" prefWidth="150" text="Status" />
                <TableColumn fx:id="acoes" prefWidth="100" text="" />
            </columns>
        </TableView>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox.margin>
                <Insets left="10.0" top="10.0" />
            </VBox.margin>
            <Button mnemonicParsing="false" onAction="#abrirAddLivro" text="Cadastrar novo livro">
             <VBox.margin>
                <Insets left="8.0" />
             </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#apagarConta" text="Apagar conta">
             <VBox.margin>
                <Insets left="8.0" />
             </VBox.margin></Button>
         <Button mnemonicParsing="false" onAction="#abrirAlterarNome" text="Alterar nome" />
         <Button mnemonicParsing="false" onAction="#abrirAlterarSenha" text="Alterar senha" />
        </HBox>
    </children>

</VBox>

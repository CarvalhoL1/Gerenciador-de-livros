<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="950" spacing="12" styleClass="vbox" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.TelaLogin">
    <children>
        <HBox alignment="CENTER" spacing="8">
            <Label styleClass="title" text="Gerenciador de Livros">
             <font>
                <Font name="System Bold" size="32.0" />
             </font></Label>
            <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                <image>
                    <Image url="@/assets/book.png" />
                </image>
            </ImageView>
        </HBox>
        <VBox alignment="CENTER" maxWidth="300" styleClass="card">
        <Label prefHeight="18.0" prefWidth="215.0" text="Email:" />
        <TextField fx:id="emailCampo" maxWidth="220.0" minWidth="-Infinity" prefHeight="8.0" prefWidth="200.0" promptText="digite o email aqui" />
        <Label prefHeight="18.0" prefWidth="219.0" text="Senha:" />
        <PasswordField fx:id="senhaCampo" maxWidth="220.0" minWidth="-Infinity" prefHeight="8.0" prefWidth="200.0" promptText="digite a senha aqui" />
        <Button mnemonicParsing="false" onAction="#fazerLogin" text="Entrar">
            <VBox.margin>
               <Insets top="8.0" />
            </VBox.margin></Button>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="221.0" text="NÃ£o tem uma conta?" textAlignment="CENTER">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
               <Insets top="8.0" />
            </VBox.margin></Label>
        <Button mnemonicParsing="false" onAction="#abrirCadastro" text="Cadastre-se">
            <VBox.margin>
               <Insets top="8.0" />
            </VBox.margin></Button>
        </VBox>
    </children>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox  styleClass="vbox" stylesheets="@../css/style.css, @../css/styleTabela.css" prefHeight="500" prefWidth="850" spacing="12" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.TelaPrincipal">
    <children>
        <Button mnemonicParsing="false" onAction="#abrirLogin" text="Logout">
         <VBox.margin>
            <Insets left="8.0" right="500.0" top="4.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
        <Label fx:id="mensagem" prefHeight="18.0" prefWidth="221.0" text="" />
        <TableView fx:id="tabela" prefHeight="350" editable="true"  prefWidth="800">
            <columns>
                <TableColumn fx:id="colTitulo" editable="true" prefWidth="150" text="Título" />
                <TableColumn fx:id="colDescricao" editable="true" prefWidth="200" text="Descrição" />
                <TableColumn fx:id="colPaginas" editable="true" prefWidth="100" text="Páginas" />
                <TableColumn fx:id="colPaginaAtual" editable="true" prefWidth="100" text="Página Atual" />
                <TableColumn fx:id="colStatus" editable="true" prefWidth="150" text="Status" />
                <TableColumn fx:id="acoes" prefWidth="100" text="" />
            </columns>
        </TableView>

        <Button mnemonicParsing="false" onAction="#abrirAddLivro" text="Cadastrar novo livro">
         <VBox.margin>
            <Insets left="8.0" />
         </VBox.margin></Button>
        <Button mnemonicParsing="false" onAction="#apagarConta" text="Apagar conta">
         <VBox.margin>
            <Insets left="8.0" />
         </VBox.margin></Button>
    </children>

</VBox>
